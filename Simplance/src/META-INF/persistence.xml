<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Simplance">
	<jta-data-source>jdbc/Simplance</jta-data-source>
		<class>entities.Address</class>
		<class>entities.Phone</class>
		<class>entities.Agent</class>
		<class>entities.Note</class>
		<class>entities.Sale</class>
		<class>entities.Customer</class>
		<class>entities.Insurance_Policy</class>
		<class>entities.Insurance_Carrier</class>
		<properties>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
			<property name="eclipselink.ddl-generation.output-mode" value="both"/>
		</properties>
	</persistence-unit>
</persistence>
